---
import { ClassByLevel, scoreToScaleDecile } from '../utils/utils';

const {
  title = 'Puntuaci√≥n Global',
  score,
  label,
  description = 'Promedio general de todas las dimensiones evaluadas.'
} = Astro.props;

const scaleDecile = typeof score === 'number'
  ? scoreToScaleDecile(score, 'madurezDigital')
  : score;
---
<style>
  .badge { border-radius: 999px; }
  .lvl-low { padding: 0.12rem 0.5rem; background: #fee2e2; color: #7f1d1d; }
  .lvl-mid { padding: 0.12rem 0.5rem; background: #fef3c7; color: #78350f; }
  .lvl-high { padding: 0.12rem 0.5rem; background: #dcfce7; color: #14532d; }
</style>
{score !== undefined && score !== null && (
  <section class="container global-score">
    <div class="score-content" style="display: flex; flex-direction: column; gap: 0.75rem; justify-content: center; align-items: center;">
      <div class="score-heading">
        <h2>{title}</h2>
        {label && <span class="score-badge">{label}</span>}
      </div>
      <div class="score-value">{scaleDecile.puntaje}</div>
      <div class:list={[ClassByLevel[scaleDecile.nivel], "badge"]} style="width: fit-content;">{scaleDecile.nivel}</div>
      {description && <p class="score-description">{description}</p>}
    </div>
  </section>
)}

<style>
  .global-score {
    margin-top: 2rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    border: 1px solid #e5e7eb;
    background: #f8fafc;
    border-radius: 0.75rem;
  }

  .score-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    text-align: center;
  }

  .score-heading {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .score-heading h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    color: #0f172a;
  }

  .score-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background: #e0f2fe;
    color: #075985;
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .score-value {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: #0f172a;
    line-height: 1;
  }

  .score-description {
    margin: 0;
    color: #475569;
    font-size: 0.95rem;
    max-width: 40rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media print {
    .global-score {
      background: none;
      border-color: #cbd5f5;
    }

    .score-badge {
      background: none;
      border: 1px solid #075985;
    }
  }
</style>
