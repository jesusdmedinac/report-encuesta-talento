---
interface Props {
  current?: string;
  printAsset?: string;
}

const { current = '', printAsset = '' } = Astro.props;

const items = [
  { id: 'home', label: 'Inicio', href: '/' },
  { id: 'gemini', label: 'Reporte Gemini', href: '/gemini' },
  { id: 'openai', label: 'Reporte OpenAI', href: '/openai' },
  { id: 'responses', label: 'Respuestas', href: '/respuestas' },
  { id: 'analysis', label: 'Análisis SEP25', href: '/analisis' },
];
---
<nav class="site-nav">
  <a class="brand" href="/">
    <span class="brand-title">Banco Guayaquil</span>
    <span class="brand-sub">Diagnóstico digital</span>
  </a>
  <div class="nav-links">
    {items.map((item) => (
      <a
        href={item.href}
        class={`nav-link${current === item.id ? ' active' : ''}`}
      >
        {item.label}
      </a>
    ))}
  </div>
</nav>

<script>
  (() => {
    const button = document.querySelector('.site-nav .print-button');
    if (!(button instanceof HTMLButtonElement)) return;

    const asset = button.dataset.printAsset;

    button.addEventListener('click', () => {
      if (!asset) {
        window.print();
        return;
      }

      const iframe = document.createElement('iframe');
      iframe.style.position = 'fixed';
      iframe.style.right = '0';
      iframe.style.bottom = '0';
      iframe.style.width = '0';
      iframe.style.height = '0';
      iframe.style.border = '0';
      iframe.src = asset;

      const cleanup = () => {
        iframe.remove();
      };

      iframe.addEventListener('load', () => {
        try {
          const iframeWindow = iframe.contentWindow;
          if (!iframeWindow) {
            window.open(asset, '_blank');
            cleanup();
            return;
          }

          let fallbackTimer: number | undefined;

          const handleAfterPrint = () => {
            iframeWindow.removeEventListener('afterprint', handleAfterPrint);
            if (fallbackTimer) {
              window.clearTimeout(fallbackTimer);
            }
            cleanup();
          };

          iframeWindow.addEventListener('afterprint', handleAfterPrint);
          fallbackTimer = window.setTimeout(() => {
            iframeWindow.removeEventListener('afterprint', handleAfterPrint);
            cleanup();
          }, 30000);
          iframeWindow.focus();
          iframeWindow.print();
        } catch (error) {
          window.open(asset, '_blank');
          cleanup();
        }
      });

      iframe.addEventListener('error', () => {
        window.open(asset, '_blank');
        cleanup();
      });

      document.body.appendChild(iframe);
    });
  })();
</script>

<style>
  .site-nav {
    position: sticky;
    top: 0;
    z-index: 50;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    padding: 18px 24px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(18px);
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
  }

  .brand {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }

  .brand-title {
    font-weight: 700;
    color: var(--primary);
  }

  .brand-sub {
    font-size: 0.78rem;
    color: var(--text-secondary);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .nav-links {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 600;
    font-size: 0.95rem;
    padding: 6px 12px;
    border-radius: 999px;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .nav-link:hover {
    background: rgba(37, 99, 235, 0.12);
    color: var(--color-company);
  }

  .nav-link.active {
    background: rgba(37, 99, 235, 0.18);
    color: var(--color-company);
  }

  .nav-print {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .print-button {
    border: none;
    background: var(--color-company);
    color: #fff;
    font-weight: 600;
    border-radius: 10px;
    padding: 10px 18px;
    cursor: pointer;
    box-shadow: 0 12px 24px rgba(37, 99, 235, 0.25);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .print-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 16px 28px rgba(37, 99, 235, 0.32);
  }

  .print-button:focus {
    outline: 2px solid rgba(37, 99, 235, 0.35);
    outline-offset: 2px;
  }

  @media (max-width: 720px) {
    .site-nav {
      padding: 16px;
    }

    .nav-links {
      width: 100%;
      justify-content: space-between;
      gap: 8px;
    }

    .nav-link {
      flex: 1 1 45%;
      text-align: center;
    }
  }
</style>
