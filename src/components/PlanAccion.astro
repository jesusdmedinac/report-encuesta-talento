--- 
// src/components/PlanAccion.astro
const { plan } = Astro.props;

// Estructura de datos por defecto para evitar errores si los datos no se cargan
const planDefault = {
  resumenGeneral: 'El plan de acción no pudo ser generado. Por favor, revise la fuente de datos.',
  iniciativas: []
};

const planData = plan || planDefault;

// Helper para mapear prioridades a colores y texto
const priorityMap = {
  Alta: { color: 'var(--color-critical, #D93F4C)', text: 'Alta' },
  Media: { color: 'var(--color-high-priority, #F59E0B)', text: 'Media' },
  Baja: { color: 'var(--color-medium-priority, #10B981)', text: 'Baja' }
};
---

<section class="plan-accion">
  <h2>Plan de Acción Estratégico</h2>
  <p class="resumen-general">{planData.resumenGeneral}</p>

  <div class="iniciativas-container">
    {planData.iniciativas.map((iniciativa: any) => (
      <div class="iniciativa-card">
        <header class="card-header">
          <h3 class="card-title">{iniciativa.titulo}</h3>
          <span 
            class="priority-badge"
            style={`background-color: ${priorityMap[iniciativa.prioridad as keyof typeof priorityMap]?.color || '#888'};`}
          >
            Prioridad {priorityMap[iniciativa.prioridad as keyof typeof priorityMap]?.text || iniciativa.prioridad}
          </span>
        </header>

        <div class="card-body">
          <p class="card-description">{iniciativa.descripcion}</p>

          <div class="details-grid">
            <div class="detail-block">
              <h4>Objetivos Clave</h4>
              <ul>
                {iniciativa.objetivosClave.map((obj: any) => <li>{obj}</li>)}
              </ul>
            </div>

            <div class="detail-block">
              <h4>Métricas de Éxito (KPIs)</h4>
              <ul>
                {iniciativa.metricasExito.map((metrica: any) => (
                  <li>
                    <strong>{metrica.metrica}:</strong> {metrica.valorObjetivo}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        <footer class="card-footer">
          <div class="footer-item">
            <strong>Área de Enfoque:</strong>
            <span>{iniciativa.areaEnfoque}</span>
          </div>
          <div class="footer-item">
            <strong>Responsable Sugerido:</strong>
            <span>{iniciativa.responsableSugerido}</span>
          </div>
          <div class="footer-item">
            <strong>Plazo Estimado:</strong>
            <span>{iniciativa.plazoEstimado}</span>
          </div>
        </footer>
      </div>
    ))}
  </div>
</section>

<style>
  .plan-accion {
    padding: 40px 0;
    font-family: var(--font-family, sans-serif);
  }

  .plan-accion h2 {
    font-size: 2.5rem;
    color: var(--color-primary, #1E293B);
    margin-bottom: 1rem;
    text-align: center;
  }

  .resumen-general {
    font-size: 1.1rem;
    color: var(--color-text-secondary, #475569);
    max-width: 800px;
    margin: 0 auto 3rem auto;
    text-align: center;
    line-height: 1.6;
  }

  .iniciativas-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .iniciativa-card {
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .iniciativa-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  }

  .card-header {
    padding: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .card-title {
    font-size: 1.4rem;
    color: var(--color-primary, #1E293B);
    margin: 0 0 0.5rem 0;
  }

  .priority-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.8rem;
    font-weight: 600;
    color: #fff;
  }

  .card-body {
    padding: 1.5rem;
    flex-grow: 1;
  }

  .card-description {
    font-size: 1rem;
    line-height: 1.5;
    color: #334155;
    margin-bottom: 1.5rem;
  }

  .details-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
      .details-grid {
          grid-template-columns: 1fr 1fr;
      }
  }

  .detail-block h4 {
    font-size: 1rem;
    color: #475569;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .detail-block ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .detail-block li {
    font-size: 0.95rem;
    color: #334155;
    line-height: 1.4;
  }

  .detail-block li strong {
      color: #1E293B;
  }

  .card-footer {
    padding: 1.5rem;
    background-color: #f8fafc;
    border-top: 1px solid #e2e8f0;
    border-radius: 0 0 16px 16px;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-item {
      font-size: 0.9rem;
  }

  .footer-item strong {
      color: #475569;
      margin-right: 0.5rem;
  }

  .footer-item span {
      color: #1E293B;
  }
</style>
