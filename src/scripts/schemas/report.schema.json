{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/report.schema.json",
  "title": "FinalReport",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "header": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "empresa": { "type": "string" },
        "fechaDiagnostico": { "type": "string" },
        "titulo": { "type": "string" },
        "idReporte": { "type": "string" },
        "empleadosEvaluados": { "type": "string" },
        "provider": { "type": "string" },
        "model": { "type": "string" },
        "schemaVersion": { "type": "string" },
        "promptVersion": { "type": "string" },
        "generatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["empresa", "fechaDiagnostico", "titulo", "idReporte", "empleadosEvaluados", "provider", "model"]
    },
    "resumenEjecutivo": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "resumenGeneral": { "type": "string" },
        "puntuacionGeneral": {
          "type": "object",
          "properties": { "puntuacion": { "type": "number" } },
          "required": ["puntuacion"]
        },
        "puntuacionesDimensiones": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "nombre": { "type": "string" },
              "puntuacion": { "type": "number" }
            },
            "required": ["nombre", "puntuacion"]
          }
        },
        "fortalezas": { "type": "array", "items": { "type": "string" } },
        "oportunidades": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["resumenGeneral", "puntuacionGeneral", "puntuacionesDimensiones"]
    },
    "introduccion": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "titulo": { "type": "string" },
        "contenido": { "type": "string" }
      },
      "required": ["contenido"]
    },
    "brechaDigital": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "puntuacionEmpresa": { "type": "number" },
        "puntuacionMetaSector": { "type": "number" },
        "nombreEmpresa": { "type": "string" },
        "textoNivelActual": { "type": "string" },
        "textoOportunidadParrafo": { "type": "string" },
        "parrafo1": { "type": "string" },
        "parrafo2": { "type": "string" }
      },
      "required": ["puntuacionEmpresa", "puntuacionMetaSector", "nombreEmpresa", "textoNivelActual"]
    },
    "madurezDigital": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "puntuacionGeneral": { "type": "number" },
        "nombreEmpresa": { "type": "string" },
        "parrafoIntroductorio": { "type": "string" },
        "componentes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "nombre": { "type": "string" },
              "puntuacion": { "type": "number" },
              "descripcion": { "type": "string" },
              "meta": { "type": "number" }
            },
            "required": ["nombre", "puntuacion"]
          }
        }
      },
      "required": ["puntuacionGeneral", "nombreEmpresa", "componentes"]
    },
    "competenciasDigitales": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "promedio": { "type": "number" },
        "nivelDesarrollo": { "type": "string" },
        "descripcionPromedio": { "type": "string" },
        "competencias": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "name": { "type": "string" },
              "score": { "type": "number" },
              "description": { "type": "string" }
            },
            "required": ["name", "score"]
          }
        }
      },
      "required": ["promedio", "competencias"]
    },
    "usoInteligenciaArtificial": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "resumen": { "type": "string" },
        "graficos": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "titulo": { "type": "string" },
              "porcentaje": { "type": "number" },
              "descripcion": { "type": "string" }
            },
            "required": ["titulo", "porcentaje"]
          }
        }
      },
      "required": ["graficos"]
    },
    "culturaOrganizacional": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "insights": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "resumen": { "type": "string" },
            "puntos": { "type": "array" }
          },
          "required": ["puntos"]
        },
        "tarjetas": { "type": "array" }
      }
    },
    "planAccion": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "resumenGeneral": { "type": "string" },
        "iniciativas": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "id": { "type": "string" },
              "titulo": { "type": "string" },
              "descripcion": { "type": "string" },
              "areaEnfoque": { "type": "string" },
              "objetivosClave": { "type": "array", "items": { "type": "string" } },
              "metricasExito": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": true,
                  "properties": {
                    "metrica": { "type": "string" },
                    "valorObjetivo": { "type": "string" }
                  },
                  "required": ["metrica", "valorObjetivo"]
                }
              },
              "responsableSugerido": { "type": "string" },
              "plazoEstimado": { "type": "string" },
              "prioridad": { "type": "string" }
            },
            "required": ["id", "titulo"]
          }
        }
      },
      "required": ["iniciativas"]
    },
    "roleSpecificScores": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": { "type": "number" }
      }
    }
  },
  "required": [
    "header",
    "resumenEjecutivo",
    "introduccion",
    "brechaDigital",
    "madurezDigital",
    "competenciasDigitales",
    "usoInteligenciaArtificial",
    "culturaOrganizacional",
    "planAccion",
    "roleSpecificScores"
  ]
}
